<%- include('../partials/header') %>
<body>
    <%- include('../partials/navbar') %>
    <div class="container">
        <hr>
            <h2>Usuarios Cadastrados</h2>
            <hr>
            <a  href="/admin/users/create" class="btn btn-outline-success"> Criar novo Usuario</a>
        <table class="table table-striped">
            <thead >
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                    <% response.forEach(element => { %>
                        <tr>
                            <th>
                                <%= element.id_user %> 
                            </th>
                            <th>
                                <%= element.name %> 
                            </th>
                            <th>
                                <%= element.email %> 
                            </th>
                            <th>
                                <a href="/admin/users/search/<%= element.id_user %>  " class="btn btn-outline-warning">Editar</a>
                                
                                <form action="/admin/users/delete" method="POST" style="display: inline" onsubmit="confirmDelet(event, this)">
                                    <input type="hidden" name="id" value=<%= element.id_user %> >
                                    <button class="btn btn-outline-danger">Deletar</button>
                                </form>
                            </th>
                        </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
    
</body>
<%- include('../partials/footer') %></hr>
<script>
    const confirmDelet = (event, form) => {
        event.preventDefault();
        let response = confirm("Deseja realmente deletar?");
        if(response) form.submit();
    }
</script>