<%- include('../partials/header') %>
<body>
    <%- include('../partials/navbar') %>
    <div class="container">
        <hr>
        <div class="card">
            <div class="card-header">
                <h2>Novo artigo</h2>
            </div>
            <div class="card-body">
                <form action="/admin/articles/save" method="POST">
                    <input class="form-control" type="text" name="title" placeholder="Nome do artigo" required=true>
                    <br>
                    <input class="form-control" type="text" name="preview" placeholder="Uma breve descrição" required=true>
                    <br>
                    <textarea id="article" name="article" class="form-control" placeholder="Escreva seu artigo"></textarea>
                    <br>
                    <label>Selecione uma categoria</label>
                    <select name="idCategorie" class="form-control">
                       <% response.map(categorie => { %>
                            <option value="<%= categorie.id_categorie %> "><%= categorie.title %> </option>
                       <% }) %>
                    </select>
                    <br>
                    <button class="btn btn-outline-success">Enviar</button>
                </form>
            </div>
            </div>
        </div>
</body>
<%- include('../partials/footer') %>
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: "#article",
        language: "pt_BR",
        plugins: ['advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons']
    });
</script>